# Environment (development, production)
ENVIRONMENT=development

# Database Configuration
DATABASE_PATH=./data/opsbot.db

# Discord Bot Configuration
DISCORD_TOKEN=YOUR_BOT_TOKEN_HERE
DISCORD_GUILD=YOUR_GUILD_ID_HERE

# API Keys
OPENROUTER_KEY=YOUR_OPENROUTER_KEY_HERE

# Scraper Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/96.0.4664.45 Safari/537.36
PROXY_LIST=http://proxy1.example.com:8080,http://proxy2.example.com:8080

# Scheduler Configuration
VALIDATION_FREQUENCY=0 */6 * * *

# Logging and Reports
LOG_DIR=./logs
RCLONE_DRIVE_PATH=gdrive:opsbot
